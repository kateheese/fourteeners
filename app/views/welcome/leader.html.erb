<div class="container">
  <div class="col-md-6 col-md-offset-3">
    <h1 class="page-header">Leaderboard</h1>
    <table class="table">
      <thead>
        <tr>
          <th>User</th>
          <th>14ers Completed</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <% @users.each do |user| %>
            <% if user.climbs.size > 0 %>
              <td><%= user.name %></td>
              <td><%= user.climbs.size %></td>
            <% end %>
          <% end %>
        </tr>
      </tbody>
    </table>
  </div>
</div>